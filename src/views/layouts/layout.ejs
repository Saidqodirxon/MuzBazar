<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MUZ BAZAR</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
        }
        
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 15px 20px;
            border-radius: 10px;
            margin: 5px 10px;
            transition: all 0.3s;
        }
        
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .stat-card {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }
        
        .stat-card .card-body {
            padding: 2rem;
        }
        
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
        }
        
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        
        .alert {
            border-radius: 10px;
        }
        
        .badge {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-snowflake me-2"></i>MUZ BAZAR Admin
            </a>
            
            <div class="navbar-nav ms-auto">
                <% if (locals.admin) { %>
                <span class="navbar-text me-3">
                    <i class="fas fa-user-shield me-1"></i>
                    <%= admin.fullName %>
                </span>
                <a class="nav-link" href="/admin/logout">
                    <i class="fas fa-sign-out-alt me-1"></i>Chiqish
                </a>
                <% } %>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <% if (locals.admin) { %>
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <% if (locals.admin.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Admin Dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Kategoriyalar' ? 'active' : '' %>" href="/admin/categories">
                                <i class="fas fa-tags me-2"></i>Kategoriyalar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Mahsulotlar' ? 'active' : '' %>" href="/admin/products">
                                <i class="fas fa-box me-2"></i>Mahsulotlar
                            </a>
                        </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Buyurtmalar' ? 'active' : '' %>" href="/admin/orders">
                                <i class="fas fa-shopping-cart me-2"></i>Buyurtmalar
                            </a>
                        </li>

                        <% if (locals.admin.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Foydalanuvchilar' ? 'active' : '' %>" href="/admin/users">
                                <i class="fas fa-users me-2"></i>Foydalanuvchilar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Sotuvchilar' ? 'active' : '' %>" href="/admin/sellers">
                                <i class="fas fa-user-tie me-2"></i>Sotuvchilar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Qarzdorlik boshqaruvi' ? 'active' : '' %>" href="/admin/debts">
                                <i class="fas fa-money-bill-wave me-2"></i>Qarzdorlik
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Hisobotlar' ? 'active' : '' %>" href="/admin/reports">
                                <i class="fas fa-chart-line me-2"></i>Hisobotlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Sozlamalar' ? 'active' : '' %>" href="/admin/settings">
                                <i class="fas fa-cogs me-2"></i>Sozlamalar
                            </a>
                        </li>
                        <% } %>
                        <li class="nav-item mt-3">
                            <hr class="text-white-50">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= title === 'Profil sozlamalari' ? 'active' : '' %>" href="/admin/profile">
                                <i class="fas fa-user-circle me-2"></i>Profilim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Chiqish
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <% } %>
            
            <!-- Main content -->
            <main class="<%= locals.admin ? 'col-md-9 ms-sm-auto col-lg-10 px-md-4' : 'col-12' %>">
                <div class="pt-3 pb-2 mb-3">
                    <!-- Flash Messages -->
                    <% if (locals.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                    
                    <% if (locals.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i><%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                    
                    <!-- Page Content -->
                    <%- body %>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js for reports -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
        <div id="mainToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i id="toastIcon" class="fas fa-check-circle me-2 text-success"></i>
                <strong class="me-auto" id="toastTitle">Xabar</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage"></div>
        </div>
    </div>
    
    <script>
        // Toast notification function
        function showToast(message, type = 'success', title = null) {
            const toast = document.getElementById('mainToast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = document.getElementById('toastIcon');
            
            // Set icon and color based on type
            toast.classList.remove('border-success', 'border-danger', 'border-warning', 'border-info');
            if (type === 'success') {
                toastIcon.className = 'fas fa-check-circle me-2 text-success';
                toastTitle.textContent = title || 'Muvaffaqiyat';
                toast.classList.add('border-success');
            } else if (type === 'error') {
                toastIcon.className = 'fas fa-times-circle me-2 text-danger';
                toastTitle.textContent = title || 'Xatolik';
                toast.classList.add('border-danger');
            } else if (type === 'warning') {
                toastIcon.className = 'fas fa-exclamation-triangle me-2 text-warning';
                toastTitle.textContent = title || 'Ogohlantirish';
                toast.classList.add('border-warning');
            } else {
                toastIcon.className = 'fas fa-info-circle me-2 text-info';
                toastTitle.textContent = title || 'Ma\'lumot';
                toast.classList.add('border-info');
            }
            
            toastMessage.textContent = message;
            const bsToast = new bootstrap.Toast(toast, { delay: 4000 });
            bsToast.show();
        }
        
        // Check URL params for toast messages
        (function() {
            const params = new URLSearchParams(window.location.search);
            const success = params.get('success');
            const error = params.get('error');
            
            const successMessages = {
                'created': 'Muvaffaqiyatli yaratildi!',
                'updated': 'Muvaffaqiyatli yangilandi!',
                'deleted': 'Muvaffaqiyatli o\'chirildi!',
                'saved': 'Ma\'lumot saqlandi!',
                'settings_updated': 'Sozlamalar saqlandi!',
                'seller_added': 'Sotuvchi qo\'shildi!',
                'category_created': 'Kategoriya yaratildi!',
                'product_created': 'Mahsulot yaratildi!',
                'product_updated': 'Mahsulot yangilandi!',
                'status_updated': 'Status yangilandi!',
                'payment_added': 'To\'lov qo\'shildi!',
                'notification_sent': 'Xabar yuborildi!'
            };
            
            const errorMessages = {
                'not_found': 'Ma\'lumot topilmadi!',
                'create_failed': 'Yaratishda xatolik!',
                'update_failed': 'Yangilashda xatolik!',
                'delete_failed': 'O\'chirishda xatolik!',
                'send_failed': 'Yuborishda xatolik!',
                'no_clients_selected': 'Klient tanlanmagan!',
                'export_failed': 'Eksport qilishda xatolik!',
                'username_exists': 'Bu login band!',
                'no_telegram': 'Foydalanuvchining Telegram ID si yo\'q!',
                'wrong_password': 'Joriy parol noto\'g\'ri!',
                'password_mismatch': 'Parollar mos kelmadi!',
                'password_too_short': 'Parol kamida 6 belgidan iborat bo\'lishi kerak!'
            };
            
            if (success) {
                // Handle sent_X format
                if (success.startsWith('sent_')) {
                    const count = success.replace('sent_', '');
                    showToast(count + ' ta klientga xabar yuborildi!', 'success');
                } else {
                    showToast(successMessages[success] || 'Muvaffaqiyatli!', 'success');
                }
                // Clean URL
                window.history.replaceState({}, '', window.location.pathname);
            }
            
            if (error) {
                showToast(errorMessages[error] || 'Xatolik yuz berdi!', 'error');
                window.history.replaceState({}, '', window.location.pathname);
            }
        })();
        
        // Auto hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
</body>
</html>