      <a href="/shop" class="brand">
        <i class="fas fa-ice-cream" style="color:var(--primary)"></i> MuzBazar
      </a>
      <nav style="display:flex; gap:0.5rem;">
        <a href="/shop/my-orders" class="btn btn-sm">
          <i class="fas fa-history"></i> Buyurtmalar
        </a>
        <a href="/shop/logout" class="btn btn-sm btn-icon" style="color: var(--danger); border-color: var(--danger);">
          <i class="fas fa-sign-out-alt"></i>
        </a>
      </nav>
    </header>
    <% } %>

