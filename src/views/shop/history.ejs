<%- include('partials/header') %>
  <div class="card">
    <h2 style="margin-bottom: 1rem; color: var(--primary);">Buyurtmalar tarixi</h2>

    <% if (orders.length===0) { %>
      <p style="text-align: center; color: var(--text-muted); padding: 2rem;">Hozircha buyurtmalar yo'q.</p>
      <a href="/shop" class="btn btn-primary">Xarid qilish</a>
      <% } else { %>
        <div class="orders-list">
          <% orders.forEach(order=> { %>
            <div class="order-item card <%= order.status %>">
              <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                <span style="font-weight: 700;">#<%= order.orderNumber || order._id.toString().slice(-6).toUpperCase()
                    %>
                </span>
                <span class="status-badge" style="background: var(--bg); border: 1px solid var(--border);">
                  <% let statusText=order.status; let statusColor='var(--text-muted)' ; switch(order.status) {
                    case 'pending' : statusText='Kutilmoqda' ; statusColor='#f59e0b' ; break; case 'confirmed' :
                    statusText='Tasdiqlandi' ; statusColor='var(--primary)' ; break; case 'delivered' :
                    statusText='Yetkazildi' ; statusColor='var(--success)' ; break; case 'cancelled' :
                    statusText='Bekor qilindi' ; statusColor='var(--danger)' ; break; } %>
                    <span style=`color: ${statusColor}`>
                      <%= statusText %>
                    </span>
                </span>
              </div>

              <div style="font-size: 0.85rem; color: var(--text-muted); margin-bottom: 0.5rem;">
                <i class="far fa-calendar-alt"></i>
                <%= new Date(order.createdAt).toLocaleDateString('uz-UZ') %>
              </div>

              <div style="border-top: 1px solid var(--border); padding-top: 0.5rem; margin-top: 0.5rem;">
                <% order.items.forEach(item=> { %>
                  <div
                    style="display: flex; justify-content: space-between; font-size: 0.9rem; margin-bottom: 0.25rem;">
                    <span>
                      <%= item.product ? item.product.name : 'O\' chirilgan mahsulot' %> x <%= item.quantity %>
                    </span>
                    <span>
                      <%= item.totalPrice.toLocaleString() %>
                    </span>
                  </div>
                  <% }); %>
              </div>

              <div style="margin-top: 0.5rem; text-align: right; font-weight: 700; color: var(--primary);">
                Jami: <%= order.totalSum.toLocaleString() %> so'm
              </div>
            </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <% if (pagination.pages> 1) { %>
          <div style="display: flex; justify-content: center; gap: 0.5rem; margin-top: 1rem;">
            <% if (pagination.page> 1) { %>
              <a href="/shop/my-orders?page=<%= pagination.page - 1 %>" class="btn btn-sm">&laquo; Oldingi</a>
              <% } %>
                <span class="btn btn-sm" style="background: var(--primary); color: white;">
                  <%= pagination.page %>
                </span>
                <% if (pagination.page < pagination.pages) { %>
                  <a href="/shop/my-orders?page=<%= pagination.page + 1 %>" class="btn btn-sm">Keyingi &raquo;</a>
                  <% } %>
          </div>
          <% } %>
            <% } %>
  </div>
  <%- include('partials/footer') %>