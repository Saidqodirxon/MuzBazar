<%
const layout = '../layouts/layout.ejs';

const formAction = product ? `/admin/products/${product._id}` : '/admin/products';
const pageTitle = product ? 'Mahsulot tahrirlash' : 'Yangi mahsulot';
const submitText = product ? 'Saqlash' : 'Yaratish';

const body = `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-box me-2"></i>${pageTitle}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/products" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Orqaga
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form action="${formAction}" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Mahsulot nomi *</label>
                        <input type="text" class="form-control" id="name" name="name" 
                               value="${product ? product.name : ''}" 
                               placeholder="Mahsulot nomini kiriting" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="category" class="form-label">Kategoriya *</label>
                        <select class="form-control" id="category" name="category" required>
                            <option value="">Kategoriya tanlang</option>
                            ${categories.map(cat => `
                            <option value="${cat._id}" ${product && product.category && (product.category._id?.toString() === cat._id.toString() || product.category.toString() === cat._id.toString()) ? 'selected' : ''}>
                                ${cat.name}
                            </option>
                            `).join('')}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="type" class="form-label">Tovar turi</label>
                        <input type="text" class="form-control" id="type" name="type" 
                               value="${product ? product.type || '' : ''}" 
                               placeholder="dona, kg, litr...">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="costPrice" class="form-label">Tannarxi (so'm) *</label>
                                <input type="number" class="form-control" id="costPrice" name="costPrice" 
                                       value="${product ? product.costPrice || '' : ''}" 
                                       placeholder="0" min="0" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="sellPrice" class="form-label">Sotilish narxi (so'm) *</label>
                                <input type="number" class="form-control" id="sellPrice" name="sellPrice" 
                                       value="${product ? product.sellPrice || '' : ''}" 
                                       placeholder="0" min="0" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="stock" class="form-label">Qolgan miqdor *</label>
                                <input type="number" class="form-control" id="stock" name="stock" 
                                       value="${product ? product.stock : ''}" 
                                       placeholder="0" min="0" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="minStock" class="form-label">Minimal qolgan miqdor</label>
                                <input type="number" class="form-control" id="minStock" name="minStock" 
                                       value="${product ? product.minStock : 5}" 
                                       placeholder="5" min="0">
                                <small class="form-text text-muted">Ushbu miqdordan kam qolsa, ogohlantirish ko'rsatiladi</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Tavsif</label>
                        <textarea class="form-control" id="description" name="description" rows="4"
                                  placeholder="Mahsulot haqida qisqacha ma'lumot">${product ? product.description || '' : ''}</textarea>
                    </div>

                    ${product ? `
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
                               ${product.isActive ? 'checked' : ''}>
                        <label class="form-check-label" for="isActive">
                            Faol mahsulot
                        </label>
                    </div>
                    ` : ''}

                    <div class="d-flex justify-content-between">
                        <a href="/admin/products" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Bekor qilish
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>${submitText}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
`;
-%>
<%- include(layout, { body, title }) %>
