<%
const layout = '../layouts/layout.ejs';

// Build categories table HTML
let categoriesHtml = '';
if (categories.length === 0) {
    categoriesHtml = `
    <div class="text-center py-5">
        <i class="fas fa-tags fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">Hali kategoriyalar yo'q</h3>
        <p class="text-muted">Birinchi kategoriyani qo'shish uchun yuqoridagi tugmani bosing</p>
        <a href="/admin/categories/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yangi kategoriya qo'shish
        </a>
    </div>`;
} else {
    categoriesHtml = `
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nomi</th>
                            <th>Tavsif</th>
                            <th>Tartib raqami</th>
                            <th>Status</th>
                            <th>Yaratilgan</th>
                            <th width="150">Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${categories.map(cat => `
                        <tr>
                            <td>
                                <strong>${cat.name}</strong>
                            </td>
                            <td>
                                ${cat.description || "Tavsif yo'q"}
                            </td>
                            <td>
                                <span class="badge bg-secondary">${cat.sortOrder}</span>
                            </td>
                            <td>
                                ${cat.isActive ? 
                                    '<span class="badge bg-success">Faol</span>' : 
                                    '<span class="badge bg-danger">Nofaol</span>'}
                            </td>
                            <td>
                                ${new Date(cat.createdAt).toLocaleDateString('uz-UZ')}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/admin/categories/${cat._id}/edit" 
                                       class="btn btn-sm btn-outline-primary" title="Tahrirlash">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            onclick="confirmDelete('${cat._id}', '${cat.name}')"
                                            title="O'chirish">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">O'chirish tasdiqlash</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Rostdan ham <strong id="deleteCategoryName"></strong> kategoriyasini o'chirmoqchimisiz?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Bu amal qaytarilmaydi va kategoriyaga bog'langan mahsulotlar ham o'chirilishi mumkin.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <form id="deleteForm" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">O'chirish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
    function confirmDelete(categoryId, categoryName) {
        document.getElementById('deleteCategoryName').textContent = categoryName;
        document.getElementById('deleteForm').action = '/admin/categories/' + categoryId + '/delete';
        
        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
    </script>`;
}

const body = `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-tags me-2"></i>Kategoriyalar
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/categories/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yangi kategoriya
        </a>
    </div>
</div>

${categoriesHtml}
`;
-%>
<%- include(layout, { body, title }) %>
