<%
const layout = '../layouts/layout.ejs';

let usersHtml = '';
if (users.length === 0) {
    usersHtml = `
    <div class="text-center py-5">
        <i class="fas fa-users fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">Hali foydalanuvchilar yo'q</h3>
    </div>`;
} else {
    usersHtml = `
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ism</th>
                            <th>Telefon</th>
                            <th>Buyurtmalar</th>
                            <th>Umumiy summa</th>
                            <th>Status</th>
                            <th>Qayd qilingan</th>
                            <th>Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${users.map(user => {
                            const statusBadge = user.isActive ? 'success' : 'danger';
                            const statusText = user.isActive ? 'Aktiv' : 'Bloklangan';
                            const toggleIcon = user.isActive ? 'ban' : 'check';
                            const toggleTitle = user.isActive ? 'Bloklash' : 'Aktivlashtirish';
                            const notifyDisabled = user.telegramId ? '' : 'disabled';
                            
                            return `
                        <tr>
                            <td>
                                <strong>${user.firstName} ${user.lastName}</strong>
                                ${user.username ? '<br><small class="text-muted">@' + user.username + '</small>' : ''}
                            </td>
                            <td><a href="tel:${user.phone}">${user.phone || 'N/A'}</a></td>
                            <td>${user.orderCount || 0}</td>
                            <td>${(user.totalSpent || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</td>
                            <td><span class="badge bg-${statusBadge}">${statusText}</span></td>
                            <td>${moment(user.createdAt).format('DD/MM/YYYY')}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/admin/users/${user._id}" class="btn btn-sm btn-outline-primary" title="Ko'rish">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form method="POST" action="/admin/users/${user._id}/toggle-status" style="display: inline;" 
                                          onsubmit="event.stopPropagation(); if(!confirm('Statusni ozgartirmoqchimisiz?')) return false;">
                                        <button type="submit" class="btn btn-sm btn-outline-${user.isActive ? 'warning' : 'success'}" 
                                                title="${toggleTitle}" onclick="event.stopPropagation();">
                                            <i class="fas fa-${toggleIcon}"></i>
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-outline-info" title="Xabar yuborish" 
                                            ${notifyDisabled} data-bs-toggle="modal" data-bs-target="#notifyModal${user._id}"
                                            onclick="event.stopPropagation();">
                                        <i class="fas fa-bell"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        `;
                        }).join('')}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Notification Modals -->
    ${users.map(user => `
    <div class="modal fade" id="notifyModal${user._id}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xabar yuborish: ${user.firstName} ${user.lastName}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/users/${user._id}/notify">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="message${user._id}" class="form-label">Xabar matni:</label>
                            <textarea class="form-control" id="message${user._id}" name="message" rows="4" required>Hurmatli ${user.firstName}!</textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-1"></i>Yuborish
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    `).join('')}`;
}

const body = `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-users me-2"></i>Foydalanuvchilar
    </h1>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <form action="/admin/users" method="GET" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Qidiruv..." value="${typeof search !== 'undefined' ? search : ''}">
            <button class="btn btn-outline-secondary" type="submit">Qidirish</button>
            ${typeof search !== 'undefined' && search ? '<a href="/admin/users" class="btn btn-outline-danger ms-2"><i class="fas fa-times"></i></a>' : ''}
        </form>
    </div>
</div>

${usersHtml}
`;
-%>
<%- include(layout, { body, title }) %>
