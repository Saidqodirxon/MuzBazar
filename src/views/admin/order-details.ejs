<%
const layout = '../layouts/layout.ejs';

let statusClass = 'secondary';
let statusText = order.status;
switch (order.status) {
    case 'pending': statusClass = 'warning'; statusText = 'Kutilmoqda'; break;
    case 'confirmed': statusClass = 'info'; statusText = 'Tasdiqlangan'; break;
    case 'delivered': statusClass = 'success'; statusText = 'Yetkazilgan'; break;
    case 'cancelled': statusClass = 'danger'; statusText = 'Bekor qilingan'; break;
}

const body = `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-receipt me-2"></i>Buyurtma #${order.orderNumber}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/orders" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Orqaga
        </a>
    </div>
</div>
<!-- Success/Error Messages -->
<script>
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    const success = urlParams.get('success');
    
    if (error === 'no_debt') {
        const msg = urlParams.get('message') || "Bu buyurtmada qarz yo'q, to'lov qabul qilinmaydi";
        setTimeout(() => alert('‚ö†Ô∏è ' + msg), 100);
    } else if (error === 'amount_exceeds_debt') {
        const debt = urlParams.get('debt') || '0';
        setTimeout(() => alert("‚ö†Ô∏è To'lov miqdori qarzdan ko'p!\\n\\nJoriy qarz: " + parseFloat(debt).toLocaleString('uz-UZ') + " so'm"), 100);
    } else if (error === 'invalid_amount') {
        setTimeout(() => alert("‚ö†Ô∏è Noto'g'ri summa kiritildi"), 100);
    } else if (success === 'payment_added') {
        setTimeout(() => {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show';
            alertDiv.innerHTML = "<i class='fas fa-check-circle me-2'></i><strong>Muvaffaqiyatli!</strong> To'lov qabul qilindi.<button type='button' class='btn-close' data-bs-dismiss='alert'></button>";
            document.querySelector('.row').insertAdjacentElement('beforebegin', alertDiv);
        }, 100);
    }
</script>
<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Buyurtma ma'lumotlari</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Klient:</strong> ${order.client?.firstName} ${order.client?.lastName}</p>
                        <p><strong>Telefon:</strong> ${order.client?.phone ? '<a href="tel:' + order.client.phone + '">' + order.client.phone + '</a>' : '<span class="text-muted">Kiritilmagan</span>'}</p>
                        ${order.client?.username ? '<p><strong>Username:</strong> @' + order.client.username + '</p>' : ''}
                    </div>
                    <div class="col-md-6">
                        <p><strong>Status:</strong> <span class="badge bg-${statusClass}">${statusText}</span></p>
                        <p><strong>Yaratilgan:</strong> ${moment(order.createdAt).utcOffset(5).format('DD/MM/YYYY HH:mm')}</p>
                    </div>
                </div>

                <h6 class="mt-4 mb-3">Buyurtma elementlari:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Mahsulot</th>
                                <th>Miqdor</th>
                                <th>Narx</th>
                                <th>Jami</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${order.items.map(item => `
                            <tr>
                                <td>${item.product?.name}</td>
                                <td>${item.quantity}</td>
                                <td>${(item.pricePerUnit || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</td>
                                <td>${(item.totalPrice || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</td>
                            </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>To'lov ma'lumotlari</h5>
            </div>
            <div class="card-body">
                <p><strong>Jami summa:</strong> ${(order.totalSum || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</p>
                <p><strong>To'landi:</strong> ${(order.paidSum || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</p>
                <p><strong>Qarzdorlik:</strong> ${(order.debt || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</p>
                
                ${payments && payments.length > 0 ? `
                <hr class="my-3">
                <h6 class="mb-3">To'lovlar tarixi:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Sana</th>
                                <th>Summa</th>
                                <th>Kim qo'shdi</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            ${payments.map(payment => `
                            <tr>
                                <td>${moment(payment.createdAt).utcOffset(5).format('DD/MM/YYYY HH:mm')}</td>
                                <td>${(payment.amount || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</td>
                                <td>${payment.seller ? (payment.seller.firstName + ' ' + (payment.seller.lastName || '')) : (payment.adminName || 'System')}</td>
                                <td class="text-end">
                                    <form action="/admin/payments/${payment._id}/delete" method="POST" style="display: inline;" 
                                          onsubmit="if(!confirm('Tolovni ochirasizmi?')) return false;">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Tolovni ochirish">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
                ` : ''}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Harakatlar</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#statusModal">
                        <i class="fas fa-edit me-2"></i>Statusni o'zgartirish
                    </button>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#paymentModal">
                        <i class="fas fa-money-bill me-2"></i>To'lov qayd qilish
                    </button>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#notifyModal" ${order.client?.telegramId ? '' : 'disabled'}>
                        <i class="fas fa-bell me-2"></i>Eslatma yuborish
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Statusni o'zgartirish</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/orders/${order._id}/status" method="POST">
                <div class="modal-body">
                    <label for="status" class="form-label">Yangi status</label>
                    <select class="form-control" id="status" name="status" required>
                        <option value="pending" ${order.status === 'pending' ? 'selected' : ''}>Kutilmoqda</option>
                        <option value="confirmed" ${order.status === 'confirmed' ? 'selected' : ''}>Tasdiqlangan</option>
                        <option value="delivered" ${order.status === 'delivered' ? 'selected' : ''}>Yetkazilgan</option>
                        <option value="cancelled" ${order.status === 'cancelled' ? 'selected' : ''}>Bekor qilingan</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">To'lov/Qarz boshqaruvi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/orders/${order._id}/payment" method="POST" onsubmit="return handlePaymentSubmit(event)">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Amal turi</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="type" id="typeSubtract" value="subtract" checked>
                            <label class="btn btn-outline-success" for="typeSubtract">
                                <i class="fas fa-minus-circle me-1"></i>Qarzdan ayirish (To'lov)
                            </label>
                            <input type="radio" class="btn-check" name="type" id="typeAdd" value="add">
                            <label class="btn btn-outline-warning" for="typeAdd">
                                <i class="fas fa-plus-circle me-1"></i>Qarzga qo'shish (Narx berish)
                            </label>
                        </div>
                        <small class="text-muted d-block mt-2" id="typeHint">To'lov qabul qilish uchun</small>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Miqdor (so'm)</label>
                        <input type="number" class="form-control" id="amount" name="amount" 
                               value="${order.debt > 0 ? order.debt : ''}" placeholder="0" required min="1" step="1">
                        <small class="text-muted" id="currentDebtInfo">
                            Joriy qarz: <strong>${(order.debt || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ')} so'm</strong>
                            ${order.debt <= 0 ? '<br><span class="text-success">‚úì Qarz to\'langan</span>' : ''}
                        </small>
                    </div>
                    ${order.debt <= 0 ? '<div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>Bu buyurtmada qarz yo\'q. Agar qarz bermoqchi bo\'lsangiz, "Qarzga qo\'shish" tugmasini tanlang.</div>' : ''}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <button type="submit" class="btn btn-primary" id="paymentSubmitBtn">
                        <span class="spinner-border spinner-border-sm d-none me-2" id="paymentSpinner"></span>
                        <span id="paymentBtnText">Tasdiqlash</span>
                    </button>
                </div>
            </form>
            <%# Payment Modal Script %>
            <script>
            (function() {
                var orderDebt = <%= order.debt || 0 %>;
                
                // Update hint text and validation when radio changes
                document.querySelectorAll('input[name="type"]').forEach(function(radio) {
                    radio.addEventListener('change', function() {
                        var hint = document.getElementById('typeHint');
                        var amountInput = document.getElementById('amount');
                        
                        if (this.value === 'subtract') {
                            hint.textContent = "To'lov qabul qilish uchun";
                            hint.className = 'text-success d-block mt-2';
                            amountInput.max = orderDebt;
                            if (orderDebt > 0) {
                                amountInput.value = orderDebt;
                            }
                        } else {
                            hint.textContent = "Qarzga qo'shish uchun";
                            hint.className = 'text-warning d-block mt-2';
                            amountInput.removeAttribute('max');
                            amountInput.value = '';
                        }
                    });
                });
                
                window.handlePaymentSubmit = function(event) {
                    var btn = document.getElementById('paymentSubmitBtn');
                    var spinner = document.getElementById('paymentSpinner');
                    var btnText = document.getElementById('paymentBtnText');
                    var typeSubtract = document.getElementById('typeSubtract');
                    var amount = parseFloat(document.getElementById('amount').value);
                    
                    // Validate amount for payment (subtract)
                    if (typeSubtract.checked) {
                        if (orderDebt <= 0) {
                            alert("‚ö†Ô∏è Bu buyurtmada qarz yo'q. To'lov qabul qilinmaydi.");
                            event.preventDefault();
                            return false;
                        }
                        if (amount > orderDebt) {
                            alert("‚ö†Ô∏è To'lov miqdori qarzdan ko'p bo'lishi mumkin emas!\\n\\nJoriy qarz: " + orderDebt.toLocaleString('uz-UZ') + " so'm\\nKiritilgan: " + amount.toLocaleString('uz-UZ') + " so'm");
                            event.preventDefault();
                            return false;
                        }
                    }
                    
                    // Prevent double submission
                    if (btn.disabled) {
                        event.preventDefault();
                        return false;
                    }
                    
                    // Disable button and show loading
                    btn.disabled = true;
                    spinner.classList.remove('d-none');
                    btnText.textContent = 'Yuklanmoqda...';
                    
                    return true;
                };
            })();
            </script>
        </div>
    </div>
</div>

<!-- Notification Modal -->
<div class="modal fade" id="notifyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-bell me-2"></i>Eslatma yuborish
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/orders/${order._id}/notify">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>${order.client?.firstName} ${order.client?.lastName}</strong> ga eslatma yuboriladi
                    </div>
                    <div class="mb-3">
                        <label for="notifyMessage" class="form-label">Xabar matni:</label>
                        <textarea class="form-control" id="notifyMessage" name="message" rows="8" required>Hurmatli mijoz!

<i>${order.client?.firstName || ''} ${order.client?.lastName || ''}</i>

üì¶ Sizning buyurtmangiz: ${order.orderNumber}

Boshlang'ich qoldiq: ${(order.totalSum || 0).toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, ' ')} so'm
To'lov summasi: ${(order.paidSum || 0).toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, ' ')} so'm
Umumiy qoldiq: ${(order.debt || 0).toString().replace(/\\B(?=(\\d{3})+(?!\\d))/g, ' ')} so'm

Vaqti: ${moment(order.createdAt).utcOffset(5).format('DD/MM/YYYY HH:mm:ss')}

${order.debt > 0 ? 'Iltimos, tolovni amalga oshiring.' : 'Rahmat! Tolovlar toliq amalga oshirilgan.'}

MUZ BAZAR</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Bekor qilish
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-paper-plane me-1"></i>Yuborish
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

`;
-%>
<%- include(layout, { body, title }) %>
