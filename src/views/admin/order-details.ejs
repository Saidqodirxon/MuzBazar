<%
const layout = '../layouts/layout.ejs';

let statusClass = 'secondary';
let statusText = order.status;
switch (order.status) {
    case 'pending': statusClass = 'warning'; statusText = 'Kutilmoqda'; break;
    case 'confirmed': statusClass = 'info'; statusText = 'Tasdiqlangan'; break;
    case 'delivered': statusClass = 'success'; statusText = 'Yetkazilgan'; break;
    case 'cancelled': statusClass = 'danger'; statusText = 'Bekor qilingan'; break;
}

const formatNumber = (num) => (num || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
const orderDebtValue = order.debt || 0;

let itemsRows = '';
if (order.items && order.items.length > 0) {
    order.items.forEach(item => {
        itemsRows += '<tr>';
        itemsRows += '<td>' + (item.product?.name || '-') + '</td>';
        itemsRows += '<td>' + item.quantity + '</td>';
        itemsRows += '<td>' + formatNumber(item.pricePerUnit) + " so'm</td>";
        itemsRows += '<td>' + formatNumber(item.totalPrice) + " so'm</td>";
        itemsRows += '</tr>';
    });
}

let paymentsHtml = '';
if (payments && payments.length > 0) {
    let paymentRows = '';
    payments.forEach(payment => {
        const sellerName = payment.seller ? (payment.seller.firstName + ' ' + (payment.seller.lastName || '')) : (payment.adminName || 'System');
        paymentRows += '<tr>';
        paymentRows += '<td>' + moment(payment.createdAt).utcOffset(5).format('DD/MM/YYYY HH:mm') + '</td>';
        paymentRows += '<td>' + formatNumber(payment.amount) + " so'm</td>";
        paymentRows += '<td>' + sellerName + '</td>';
        paymentRows += '<td class="text-end">';
        paymentRows += `<form action="/admin/payments/${payment._id}/delete" method="POST" style="display: inline;" onsubmit="return confirm('Tolovni ochirasizmi?')">`;
        paymentRows += '<button type="submit" class="btn btn-sm btn-danger" title="Tolovni ochirish"><i class="fas fa-minus"></i></button>';
        paymentRows += '</form></td>';
        paymentRows += '</tr>';
    });
    
    paymentsHtml = '<hr class="my-3"><h6 class="mb-3">Tolovlar tarixi:</h6>';
    paymentsHtml += '<div class="table-responsive"><table class="table table-sm">';
    paymentsHtml += '<thead><tr><th>Sana</th><th>Summa</th><th>Kim qoshdi</th><th></th></tr></thead>';
    paymentsHtml += '<tbody>' + paymentRows + '</tbody></table></div>';
}

const clientName = (order.client?.firstName || '') + ' ' + (order.client?.lastName || '');
const clientPhone = order.client?.phone ? '<a href="tel:' + order.client.phone + '">' + order.client.phone + '</a>' : '<span class="text-muted">Kiritilmagan</span>';
const clientUsername = order.client?.username ? '<p><strong>Username:</strong> @' + order.client.username + '</p>' : '';
const notifyDisabled = order.client?.telegramId ? '' : 'disabled';
const debtAlertHtml = order.debt <= 0 ? '<div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>Bu buyurtmada qarz yoq. Agar qarz bermoqchi bolsangiz, "Qarzga qoshish" tugmasini tanlang.</div>' : '';
const debtPaidHtml = order.debt <= 0 ? '<br><span class="text-success">âœ“ Qarz tolangan</span>' : '';

const notifyMessage = 'Hurmatli mijoz!\n\nSizning buyurtmangiz: ' + order.orderNumber + '\n\nJami summa: ' + formatNumber(order.totalSum) + " so'm\nTo'langan: " + formatNumber(order.paidSum) + " so'm\nQoldiq: " + formatNumber(order.debt) + " so'm\n\n" + (order.debt > 0 ? 'Iltimos, tolovni amalga oshiring.' : 'Rahmat! Tolovlar toliq amalga oshirilgan.') + '\n\nMUZ BAZAR';
-%>
<%- include(layout, { body: `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-receipt me-2"></i>Buyurtma #${order.orderNumber}
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/orders" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Orqaga
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Buyurtma malumotlari</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Klient:</strong> ${clientName}</p>
                        <p><strong>Telefon:</strong> ${clientPhone}</p>
                        ${clientUsername}
                    </div>
                    <div class="col-md-6">
                        <p><strong>Status:</strong> <span class="badge bg-${statusClass}">${statusText}</span></p>
                        <p><strong>Yaratilgan:</strong> ${moment(order.createdAt).utcOffset(5).format('DD/MM/YYYY HH:mm')}</p>
                    </div>
                </div>

                <h6 class="mt-4 mb-3">Buyurtma elementlari:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Mahsulot</th>
                                <th>Miqdor</th>
                                <th>Narx</th>
                                <th>Jami</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${itemsRows}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Tolov malumotlari</h5>
            </div>
            <div class="card-body">
                <p><strong>Jami summa:</strong> ${formatNumber(order.totalSum)} som</p>
                <p><strong>Tolandi:</strong> ${formatNumber(order.paidSum)} som</p>
                <p><strong>Qarzdorlik:</strong> ${formatNumber(order.debt)} som</p>
                ${paymentsHtml}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Harakatlar</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#statusModal">
                        <i class="fas fa-edit me-2"></i>Statusni ozgartirish
                    </button>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#paymentModal">
                        <i class="fas fa-money-bill me-2"></i>Tolov qayd qilish
                    </button>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#notifyModal" ${notifyDisabled}>
                        <i class="fas fa-bell me-2"></i>Eslatma yuborish
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Statusni ozgartirish</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/orders/${order._id}/status" method="POST">
                <div class="modal-body">
                    <label for="status" class="form-label">Yangi status</label>
                    <select class="form-control" id="status" name="status" required>
                        <option value="pending" ${order.status === 'pending' ? 'selected' : ''}>Kutilmoqda</option>
                        <option value="confirmed" ${order.status === 'confirmed' ? 'selected' : ''}>Tasdiqlangan</option>
                        <option value="delivered" ${order.status === 'delivered' ? 'selected' : ''}>Yetkazilgan</option>
                        <option value="cancelled" ${order.status === 'cancelled' ? 'selected' : ''}>Bekor qilingan</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tolov/Qarz boshqaruvi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/orders/${order._id}/payment" method="POST" id="paymentForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Amal turi</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="type" id="typeSubtract" value="subtract" checked>
                            <label class="btn btn-outline-success" for="typeSubtract">
                                <i class="fas fa-minus-circle me-1"></i>Qarzdan ayirish (Tolov)
                            </label>
                            <input type="radio" class="btn-check" name="type" id="typeAdd" value="add">
                            <label class="btn btn-outline-warning" for="typeAdd">
                                <i class="fas fa-plus-circle me-1"></i>Qarzga qoshish
                            </label>
                        </div>
                        <small class="text-muted d-block mt-2" id="typeHint">Tolov qabul qilish uchun</small>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Miqdor (som)</label>
                        <input type="number" class="form-control" id="amount" name="amount" 
                               value="${order.debt > 0 ? order.debt : ''}" placeholder="0" required min="1" step="1">
                        <small class="text-muted" id="currentDebtInfo">
                            Joriy qarz: <strong>${formatNumber(order.debt)} som</strong>
                            ${debtPaidHtml}
                        </small>
                    </div>
                    ${debtAlertHtml}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
                    <button type="submit" class="btn btn-primary" id="paymentSubmitBtn">
                        <span class="spinner-border spinner-border-sm d-none me-2" id="paymentSpinner"></span>
                        <span id="paymentBtnText">Tasdiqlash</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Notification Modal -->
<div class="modal fade" id="notifyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-bell me-2"></i>Eslatma yuborish</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/admin/orders/${order._id}/notify">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>${clientName}</strong> ga eslatma yuboriladi
                    </div>
                    <div class="mb-3">
                        <label for="notifyMessage" class="form-label">Xabar matni:</label>
                        <textarea class="form-control" id="notifyMessage" name="message" rows="8" required>${notifyMessage}</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Bekor qilish
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-paper-plane me-1"></i>Yuborish
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
(function() {
    var orderDebt = ` + orderDebtValue + `;
    
    document.querySelectorAll('input[name="type"]').forEach(function(radio) {
        radio.addEventListener('change', function() {
            var hint = document.getElementById('typeHint');
            var amountInput = document.getElementById('amount');
            
            if (this.value === 'subtract') {
                hint.textContent = "Tolov qabul qilish uchun";
                hint.className = 'text-success d-block mt-2';
                if (orderDebt > 0) amountInput.value = orderDebt;
            } else {
                hint.textContent = "Qarzga qoshish uchun";
                hint.className = 'text-warning d-block mt-2';
                amountInput.value = '';
            }
        });
    });
    
    document.getElementById('paymentForm').addEventListener('submit', function(e) {
        var btn = document.getElementById('paymentSubmitBtn');
        var spinner = document.getElementById('paymentSpinner');
        var btnText = document.getElementById('paymentBtnText');
        var typeSubtract = document.getElementById('typeSubtract');
        var amount = parseFloat(document.getElementById('amount').value);
        
        if (typeSubtract.checked) {
            if (orderDebt <= 0) {
                alert("Bu buyurtmada qarz yoq.");
                e.preventDefault();
                return false;
            }
            if (amount > orderDebt) {
                alert("Tolov miqdori qarzdan kop!");
                e.preventDefault();
                return false;
            }
        }
        
        if (btn.disabled) {
            e.preventDefault();
            return false;
        }
        
        btn.disabled = true;
        spinner.classList.remove('d-none');
        btnText.textContent = 'Yuklanmoqda...';
    });
})();
</script>
`, title }) %>
