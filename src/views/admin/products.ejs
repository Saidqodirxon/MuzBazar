<%
const layout = '../layouts/layout.ejs';

let productsHtml = '';
if (products.length === 0) {
    productsHtml = `
    <div class="text-center py-5">
        <i class="fas fa-box fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">Hali mahsulotlar yo'q</h3>
        <p class="text-muted">Birinchi mahsulotni qo'shish uchun yuqoridagi tugmani bosing</p>
        <a href="/admin/products/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yangi mahsulot qo'shish
        </a>
    </div>`;
} else {
    productsHtml = `
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nomi</th>
                            <th>Kategoriya</th>
                            <th>Narx</th>
                            <th>Qolgan</th>
                            <th>Status</th>
                            <th>Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${products.map(product => {
                            const price = product.sellPrice || product.price || 0;
                            const formattedPrice = price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
                            const categoryName = product.category?.name || '-';
                            const safeName = product.name.replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                            const confirmMsg = `Haqiqatan ham "${product.name}" mahsulotini o'chirmoqchimisiz?`;
                            const safeConfirmMsg = confirmMsg.replace(/"/g, '&quot;').replace(/'/g, "\\'");
                            
                            return `
                        <tr>
                            <td><strong>${product.name}</strong></td>
                            <td>${categoryName}</td>
                            <td>${formattedPrice} so'm</td>
                            <td>
                                <span class="badge ${product.stock <= product.minStock ? 'bg-warning' : 'bg-success'}">
                                    ${product.stock}
                                </span>
                            </td>
                            <td>
                                ${product.isActive ? 
                                    '<span class="badge bg-success">Faol</span>' : 
                                    '<span class="badge bg-danger">Nofaol</span>'}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/admin/products/${product._id}/edit" class="btn btn-sm btn-outline-primary" title="Tahrirlash">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="POST" action="/admin/products/${product._id}/delete" style="display: inline;" onsubmit="return confirm('${safeConfirmMsg}')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="O'chirish">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        `;
                        }).join('')}
                    </tbody>
                </table>
            </div>
        </div>
    </div>`;
}

const body = `
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-box me-2"></i>Mahsulotlar
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/admin/products/export" class="btn btn-success me-2" ${products.length === 0 ? 'disabled' : ''}>
            <i class="fas fa-file-excel me-2"></i>Excel
        </a>
        <a href="/admin/products/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yangi mahsulot
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <form action="/admin/products" method="GET" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Qidiruv..." value="${typeof search !== 'undefined' ? search : ''}">
            <button class="btn btn-outline-secondary" type="submit">Qidirish</button>
            ${typeof search !== 'undefined' && search ? '<a href="/admin/products" class="btn btn-outline-danger ms-2"><i class="fas fa-times"></i></a>' : ''}
        </form>
    </div>
</div>

${productsHtml}
`;
-%>
<%- include(layout, { body, title }) %>
